<body>
    <h1>国家中小学智慧教育平台教材下载</h1>
    <label for="inputLink">输入链接：</label>
    <input type="text" id="inputLink" placeholder="请输入链接">
    <button id="convertButton">转换</button> <!-- 转换按钮 -->
    <button id="visitEduPlatformButton">访问国家中小学智慧教育平台</button> <!-- 访问平台按钮 -->
    <div class="buttons" id="actionButtons" style="display: none;">
        <button id="visitButton">访问</button>
        <button id="clearButton">清空</button>
    </div>

    <script>
        document.getElementById('convertButton').addEventListener('click', () => {
            const inputLink = document.getElementById('inputLink').value;
            const match = inputLink.match(/https:\/\/basic\.smartedu\.cn\/tchMaterial\/detail\?contentType=assets_document&contentId=([^&]*)&catalogType=tchMaterial&subCatalog=tchMaterial/);

            if (match) {
                const extractedPart = match[1];
                const newLink = `https://r3-ndr.ykt.cbern.com.cn/edu_product/esp/assets/${extractedPart}.pkg/pdf.pdf`;

                // 显示访问和清空按钮
                document.getElementById('actionButtons').style.display = 'flex';

                // 访问按钮功能
                document.getElementById('visitButton').onclick = () => {
                    window.open(newLink, '_blank');
                };
            } else {
                alert('输入的链接不符合要求，请检查后重试。');
            }
        });

        // 访问国家中小学智慧教育平台按钮功能
        document.getElementById('visitEduPlatformButton').addEventListener('click', () => {
            const platformUrl = 'https://basic.smartedu.cn/tchMaterial?defaultTag=fa6200b8-b4aa-4d72-bebb-dddd93022a13%2Fd1914cee-dbcc-44e6-bab3-74eeed0e9875%2F0a724f60-913a-4c39-90a3-f9ce4c899e7b';
            window.open(platformUrl, '_blank');
        });

        // 清空按钮功能
        document.getElementById('clearButton').addEventListener('click', () => {
            document.getElementById('inputLink').value = '';
            document.getElementById('actionButtons').style.display = 'none';
        });
    </script>
</body>
